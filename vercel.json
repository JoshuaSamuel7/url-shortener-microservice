{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server-u/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["server-u/**"] }
    },
    {
      "src": "logging/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["logging/**"] }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server-u/index.js" },
    { "src": "/logs/(.*)", "dest": "logging/index.js" }
  ]
}
